{
  "manifest_version": 3,
  "name": "YouTube Script Spoon",
  "version": "1.2",
  "description": "YouTube 스크립트를 AI 번역에 적합한 크기로 잘라서 복사",
  "permissions": ["clipboardWrite", "storage"],
  "host_permissions": ["*://*.youtube.com/*", "https://generativelanguage.googleapis.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
